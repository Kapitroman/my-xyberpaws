extends ../components/base/layout

block variables
  - const title = "xyberpaws" //- на страницах кроме главной используйте О нас — ProjectName
  - const wrapperMods = ""
  - const hasHeader = true
  - const headerMods = ""
  - const hasFooter = true
  - const footerMods = ""
  - const currentUrl = "index.html" //- для остальных страниц пишем пустую строку или индекс активного headerLinks

block main
  main
    +hero()
    +we-can-help-you()
    +who-we-are()
    +case-study()
    +reviews()
    +what-we-can-do()
    +contact-us()

block modals
  +modal("modal--success modal--fit-content modal--no-scale")(data-modal="success")
    +modal-success()
  +modal("modal--error modal--fit-content modal--no-scale")(data-modal="error")
    +modal-error()
